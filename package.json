{
  "name": "simbi-on-elide",
  "version": "2.0.0",
  "description": "Simbi marketplace running on Elide polyglot runtime - Complete production build",
  "main": "app.ts",
  "scripts": {
    "dev": "ts-node app.ts",
    "build": "tsc && npm run build:frontend",
    "build:frontend": "cd frontend && webpack --mode production",
    "start": "node dist/app.js",
    "start:elide": "elide run app.ts",
    "watch": "nodemon --exec ts-node app.ts",
    "db:migrate": "ts-node backend/db/migrations/migration-manager.ts up",
    "db:seed": "ts-node backend/db/seeds.ts",
    "db:test": "ts-node backend/db/test-connection.ts",
    "workers": "ts-node workers/start.ts",
    "test": "echo 'Tests coming soon'"
  },
  "keywords": [
    "simbi",
    "elide",
    "polyglot",
    "marketplace",
    "vue",
    "typescript",
    "rails"
  ],
  "author": "Simbi Inc",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "pug": "^3.0.2",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "bull": "^4.11.5",
    "redis": "^4.6.10",
    "ioredis": "^5.3.2",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "stripe": "^14.5.0",
    "socket.io": "^4.6.2",
    "mixpanel": "^0.18.0",
    "twilio": "^4.19.0",
    "@sendgrid/mail": "^7.7.0",
    "axios": "^1.6.2",
    "date-fns": "^2.30.0",
    "uuid": "^9.0.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.5",
    "@types/pug": "^2.0.6",
    "@types/pg": "^8.10.9",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/uuid": "^9.0.7",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "vue-loader": "^15.10.1",
    "babel-loader": "^9.1.3",
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3"
  }
}
