//- Navigation Bar Partial

nav.navbar.navbar-default.navbar-fixed-top
  .container-fluid
    .navbar-header
      button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar

      a.navbar-brand(href='/')
        img(src='/assets/images/simbi-logo.png' alt='Simbi')

    #navbar-collapse.collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-right
        if user_signed_in()
          li
            a(href='/services') Browse Services
          li
            a(href='/talks') Messages
          li.dropdown
            a.dropdown-toggle(href='#' data-toggle='dropdown' role='button')
              = currentUser.firstName
              span.caret
            ul.dropdown-menu
              li
                a(href=`/users/${currentUser.id}`) My Profile
              li
                a(href='/settings') Settings
              li.divider(role='separator')
              li
                a(href='/logout' data-method='delete') Logout
        else
          li
            a.join-btn(href='/signup') Join
          li
            a(href='/login') Login
