# Ruby dependencies for Simbi workers

source 'https://rubygems.org'

ruby '~> 3.2.0'

# Action Mailer for email sending
gem 'actionmailer', '~> 7.1'

# Active Record for database access
gem 'activerecord', '~> 7.1'

# PostgreSQL adapter
gem 'pg', '~> 1.5'

# Redis client
gem 'redis', '~> 5.0'

# HTTP client
gem 'faraday', '~> 2.7'

# Slack notifications
gem 'slack-notifier', '~> 2.4'

# Twilio for SMS
gem 'twilio-ruby', '~> 6.9'

# JSON parsing
gem 'oj', '~> 3.16'

# Environment variables
gem 'dotenv', '~> 2.8'

group :development, :test do
  gem 'rspec', '~> 3.12'
  gem 'pry', '~> 0.14'
end
